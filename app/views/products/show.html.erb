<section class="products-show">
	<header class="page-header">
		<h1>
			<%= link_to @product.category.name, @product.category %> &raquo; <%=
			@product.name %>
		</h1>
	</header>

	<article class="product-detail">
		<div class="row">
			<div class="col-sm-4">
				<%= image_tag @product.image.url, class: 'main-img' %>
			</div>

			<div class="col-sm-8">
				<dl class="dl-horizontal">
					<dt>Name</dt>
					<dd><%= @product.name %></dd>
					<dt>Description</dt>
					<dd><%= @product.description %></dd>
					<dt>In stock</dt>
					<dd><%= @product.quantity %></dd>
					<dt>Price</dt>
					<dd>$<%= @product.price %></dd>
				</dl>
			</div>
			<div id="review_box" class="col-sm-8">
				<h3>Reviews</h3>
				<% if @reviews.blank? %>
				<h5>
					<strong>
						Be the first to submit a review!
					</strong>
				</h5>
				<% else %>
				<dl class="dl-horizontal">
					<% @product.reviews.each do |review| %>
					<dt><%= review.user.first_name %></dt>
					<dd><%= review.description %></dd>
					<dd><%= review.rating %> / 5</dd>
					<% end %>
				</dl>
				<% end %>
        <% if current_user %>
            You are logged in
        <% end %>
				<div class="form">
					<%= form_for(@review) do |f| %> <% if @review.errors.any? %>
					<div id="error_explanation">
						<h2>
							<%= pluralize(@review.errors.count, "error") %> prohibited this
							review from being saved:
						</h2>

						<ul>
							<% @review.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
					<% end %>
          <h4>Add your review</h4>
					<div class="field">
						<input
							type="hidden"
							id="review_product_id"
							name="review[product_id]"
							value="<%= @product.id %>"
						/>
					</div>
					<div class="field">
						<%= f.label :description %><br />
						<%= f.text_area :description, placeholder: 'How awesome is this product?'%>
					</div>
					<span class="rating" >
						<%= f.label :rating %><br />
						<%= f.select :rating, options_for_select([['1', 1.to_i], ['2',
						2.to_i], ['3', 3.to_i], ['4', 4], ['5', 5]]) %>
					</span>
					<span class="actions">
						<%= f.submit %>
					</span>
					<% end %>
				</div>
			</div>
		</div>
	</article>
</section>
